<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>
      {{#if pageTitle}}
        {{pageTitle}}
      {{else}}
        Wiki
      {{/if}}</title>
    <link rel="stylesheet" href="/css/site.css" />
  </head>

  <body>
    <div>
      <aside>
        <div class="center">
          <img class="logo" src="/img/logo.png" alt="logo" />
        </div>

        <nav>

          <a href="/">Main Page</a>
          <a href="/articles/catalog">All Articles</a>
          <form>
            <input type="text" />
            <input type="submit" value="Search" />
          </form>
          {{#if user.isAuthenticated}}
            <a href="/articles/create">Create New Article</a>
          {{/if}}
        </nav>
      </aside>
      <div id="container">
        <header>
          {{#if user.isAuthenticated}}
            <span>Welcome, {{user.username}}!</span>
            <a href="/users/logout">[Logout]</a>
          {{else}}
            <a href="/users/login">Login</a>
            <a href="/users/register">Register</a>
          {{/if}}
        </header>
        <main>
          {{{body}}}
        </main>
        <footer>
          SoftUni Wiki &copy; 2018 - 2019
        </footer>
      </div>
    </div>
  </body>

</html>